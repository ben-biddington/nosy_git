#!/usr/bin/ruby

STDOUT.sync = true

the_file = ARGV[0]

require File.join File.dirname(__FILE__), "..", "lib", "nosy_git"

if Git.has_changes?
  puts "You have changes, aborting" 
  exit 1
end

unless File.file? the_file
  puts "#{the_file} is not a file"
  exit 1
end

puts "(#{FileUtils.pwd})"
puts "Analyzing <#{the_file}>"

NosyGit.analyze the_file
