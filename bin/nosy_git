#!/usr/bin/ruby

class Lines
  class << self
    def for(file, revision)
      %x{ git checkout #{revision} #{file} }
      %x{ wc -l #{file} }.match /^[^\s]+ /
    end
  end
end

class Revisions
  class << self
    def for(file)
      %x{ git log --oneline -- #{file} }
    end
  end
end

the_file = ARGV[0]

puts "(#{FileUtils.pwd})"
puts "Analyzing <#{the_file}>"

revisions = Revisions.for the_file

revisions.each do |rev|
  the_revision = rev.match /^[^\s]+ /
  the_number_of_lines = Lines.for the_file, the_revision
  puts "#{rev.strip}, lines: #{the_number_of_lines}"
end
