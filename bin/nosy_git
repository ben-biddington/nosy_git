#!/usr/bin/ruby

STDOUT.sync = true

the_file = ARGV[0]

require File.join File.dirname(__FILE__), "..", "lib", "nosy_git"
require "fileutils"

if Git.has_changes?
  puts "You have changes, aborting" 
  exit 1
end

puts "(#{FileUtils.pwd})"
puts "Analyzing <#{the_file}>"

revisions = Revisions.for the_file

begin
  revisions.each do |rev|
    the_number_of_lines = Lines.for the_file, rev.number
    puts "author:#{rev.author}, #{rev.timestamp} #{rev.number}, lines: #{the_number_of_lines}, added: #{rev.changes.added}, message: #{rev.message[0,50]}"
  end
ensure
  Revisions.head the_file
end
